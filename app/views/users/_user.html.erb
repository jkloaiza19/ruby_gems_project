<div class="col">
  <div class="card border-dark mb-3 text-dark shadow-lg">
    <h5 class="card-header text-center">
      <i class="bi bi-person-fill"></i>
      <% if user.online? %>
        <i class="text-success bi bi-circle-fill"></i>
      <% else %>  
        <i class="text-secondary bi bi-circle-fill"></i>
      <% end %>  
      <%= link_to "#{user.email}", user_path(user), class: "btn btn-link" %>
    </h5>
    <div class="mt-2">
      <% if user.roles %>
        <% user.roles.each do |role| %>
        <h5 class="text-center"><span class="badge rounded-pill text-bg-primary"><%= role.name %></span></h5>
        <% end %> 
      <% end %>  
    </div>
        <div class="card-footer order-primary">
        <div class="col"><i class="bi bi-dot"></i> <strong>signup:</strong> <%= user.created_at.strftime('%m/%d/%Y') %></div>
        <div class="col"><i class="bi bi-dot"></i> <strong><%= "sign_in_count".humanize %>:</strong> <%= user.sign_in_count %></div>
        <div class="col"><i class="bi bi-dot"></i> <strong><%= "current_sign_in_at".humanize %>:</strong> <%= user.current_sign_in_at.strftime('%m/%d/%Y') if user.current_sign_in_at %></div>
        <div class="col"><i class="bi bi-dot"></i> <strong><%= "last_sign_in_at".humanize %>:</strong> <%= user.last_sign_in_at.strftime('%m/%d/%Y') if user.last_sign_in_at %></div>
        <div class="col"><i class="bi bi-dot"></i> <strong><%= "current_sign_in_ip".humanize %>:</strong> <%= user.current_sign_in_ip %></div>
        <div class="col"><i class="bi bi-dot"></i> <strong><%= "last_sign_in_ip".humanize %>:</strong> <%= user.last_sign_in_ip %></div>
        <div class="col"><i class="bi bi-dot"></i> <strong><%= "confirmed email".humanize %>:</strong>
            <% if user.confirmed_at? %>
                <span class="badge text-bg-success">Yes</span>
            <% else %>
                <span class="badge text-bg-danger">Pending</span>
            <% end %>    
        </div>
        <div class="col mt-3 text-center">
          <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <%= link_to 'View', user_path(user), class: "btn btn-outline-success" if !current_page?(user_path(user)) %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-primary" %>
            <%= button_to 'Delete', user_path(user), method: :delete, class: "btn btn-outline-danger" %>
          </div>
        </div>
        <% if !current_page?(users_path) %>
          <div class="col mt-3">
            <%= link_to "Back to users", users_path %>
          </div>
        <% end %>  
      </div>
   </div>
 </div>  