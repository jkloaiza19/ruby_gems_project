<p style="color: green"><%= notice %></p>

<h1>Courses (<%= @courses.count %>)</h1>

<table id="courses" class="table table-hover table-striped">
<thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col" scope="col">Author</th>
      <th scope="col" scope="col">View</th>
      <th scope="col" scope="col">Edit</th>
      <th scope="col" scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
    <%= render course %>
  <% end %>
</table>

<%= link_to "New course", new_course_path %>
