  <tr  id="<%= dom_id course %>" >
      <td scope="col"><%= course.title %></td>
      <td scope="col"><%= course.description %></td>
      <td scope="col"><%= course.user.email %></td>
      <td scope="col"><%= link_to '<i class="bi bi-arrow-right"></i>'.html_safe, course, class: "btn btn-primary" %></td>
      <td scope="col">
        <% if course.user.id == current_user.id %>
          <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_course_path(course.id), class: "btn btn-primary" %></td>
        <% else %>
          <button type="button" class="btn btn-outline-secondary" disabled><i class="bi bi-pencil-square"></i></button>  
        <% end %>  
      <td scope="col">
        <% if course.user.id == current_user.id %>
          <%= button_to '<i class="bi bi-x-lg"></i>'.html_safe, course, method: :delete, data: {turbo_confirm: "Are you sure you want to delete"}, class: "btn btn-danger" %>
          <% else %>
            <button type="button" class="btn btn-outline-secondary" disabled><i class="bi bi-x-lg"></i></button> 
        <% end %>  
      </td>
    </tr>
 
